alias j='just'
alias p='pixi'
alias m='mise'
alias k='kubectl'
alias cm='chezmoi'

alias grep='grep --color=always'
alias fgrep='fgrep --color=always'
alias egrep='egrep --color=always'

alias ls='eza -al'
alias l='eza -al'
alias ll='eza -alF'
alias la='eza -A'

alias ka='kubeadm'
alias apply='kubectl apply -f'
alias delete='kubectl delete -f'
alias pcat='python -m json.tool'
alias ksys='kubectl -n kube-system'
alias watch_svc='watch -n 1 kubectl get svc --all-namespaces -o wide'
alias watch_pod='watch -n 1 kubectl get pods --all-namespaces -o wide'

alias dlogs='docker compose logs'

function newrepo {
git init
git add --all
git commit -m "init"
if ! gh auth status >/dev/null 2>&1; then
    gh auth refresh
fi
gh newrepo
}
