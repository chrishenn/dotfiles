alias j='just'
alias p='pixi'
alias m='mise'
alias k='kubectl'
alias cm='chezmoi'

alias grep='grep --color=always'
alias fgrep='fgrep --color=always'
alias egrep='egrep --color=always'

alias ls='eza -aal'
alias l='eza -aal'
alias ll='eza -aalF'
alias la='eza -Aa'

alias ka='kubeadm'
alias apply='kubectl apply -f'
alias delete='kubectl delete -f'
alias pcat='python -m json.tool'
alias ksys='kubectl -n kube-system'
alias watch_svc='watch -n 1 kubectl get svc --all-namespaces -o wide'
alias watch_pod='watch -n 1 kubectl get pods --all-namespaces -o wide'

alias dc='docker compose'
alias dlogs='docker compose logs'

function ghlogin {
echo $(op read "op://homelab/github/credential") | gh auth login -h github.com -p ssh --skip-ssh-key --with-token
}

function glablogin {
glab auth login --hostname gitlab.henn.dev -g ssh -a gitlab.henn.dev -p https --token $(op read "op://homelab/Gitlab/pat")
}

function newrepo {
git init
git add --all
git commit -m "init"
if ! gh auth status; then
    ghlogin
fi
gh newrepo
}

function newrepog {
git init
git add --all
git commit -m "init"
if ! glab auth status &>/dev/null; then
    glablogin
fi
glab newrepo
git push --set-upstream origin --all
git push --set-upstream origin --tags
}


